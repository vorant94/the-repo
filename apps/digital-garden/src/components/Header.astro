---
import { getRelativeLocaleUrl } from "astro:i18n";
import headerLogo from "../assets/header-logo.webp";
import headerLogoDark from "../assets/header-logo-dark.webp";
import { ButtonLink } from "./ui/button-link";
import { ThemedImage } from "./ui/themed-image";
---

<header class="sticky top-0 z-10 backdrop-blur-sm flex items-center gap-1 border-slate-300 border-b p-4 dark:border-slate-600">
	<nav>
		<ButtonLink
			href={getRelativeLocaleUrl(Astro.currentLocale!)}
			className="p-0!"
		>
			<ThemedImage
				src={headerLogo}
				srcDark={headerLogoDark}
				alt="Logo"
				width="120"
			/>
		</ButtonLink>
	</nav>

	<span class="flex-1" />

	<slot/>
</header>
