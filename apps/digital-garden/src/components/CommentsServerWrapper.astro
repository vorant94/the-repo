---
import { CommentsClientWrapper } from "./comments-client-wrapper";

export interface Props {
  postSlug: string;
}

// this component is needed to be able to get user data on-demand and not during build
const { user } = Astro.locals;

const { postSlug } = Astro.props;
---

<CommentsClientWrapper
  client:only
	postSlug={postSlug}
	user={user}
/>
