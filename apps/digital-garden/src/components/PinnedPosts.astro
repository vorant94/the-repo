---
import { getCollection } from "astro:content";
import { format } from "date-fns";
import { publishedAtFormat } from "../globals/published-at-format";
import {
  createFilterPostsByLang,
  sortPostsByPublishedAt,
} from "../utils/content.helpers";
import PostListItem from "./PostListItem.astro";
import StandOut from "./ui/StandOut.astro";

const filteredPosts = await getCollection(
  "posts",
  createFilterPostsByLang(Astro.currentLocale),
);
const sortedPosts = sortPostsByPublishedAt(filteredPosts);

const pinnedPosts = sortedPosts.filter((post) => post.data.isPinned);
---

{pinnedPosts.length > 0 && (
  <menu>
    {pinnedPosts.map((post) => (
      <StandOut class="flex-col">
        <span class="flex items-center gap-3">
          <span class="-scale-x-100">ðŸ“Œ</span>

          <PostListItem
            post={post}
            class="!py-0 flex-1"
          >
            <Fragment slot="left">
              {post.data.title}
            </Fragment>
            <Fragment slot="right">
              {format(post.data.publishedAt, publishedAtFormat.short)}
            </Fragment>
          </PostListItem>
        </span>
      </StandOut>
    ))}
  </menu>
)}
