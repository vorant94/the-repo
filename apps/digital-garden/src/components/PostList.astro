---
import Divider from "./ui/Divider.astro";
import Title from "./ui/Title.astro";
---

<div class="flex flex-col gap-2">
	{Astro.slots.has('title') && (
		<Divider isLeft={false}>
			<Title as="h3">
				<slot name="title" />
			</Title>
		</Divider>
	)}

	<menu class="flex flex-col divide-y divide-dashed divide-slate-300 dark:divide-slate-600">
		<slot />
	</menu>
</div>
