---
import { createTranslate } from "../utils/i18n.helpers";
import ButtonLink from "./ui/ButtonLink.astro";
import Divider from "./ui/Divider.astro";
import Icon from "./ui/Icon.astro";
import Title from "./ui/Title.astro";

const t = createTranslate(Astro.currentLocale);

const socialLinksMeta = [
  {
    glyph: "github",
    label: "Github",
    url: "https://github.com/vorant94/",
  },
  {
    glyph: "bluesky",
    label: "Bluesky",
    url: "https://bsky.app/profile/vorant94.dev",
  },
  {
    glyph: "telegram",
    label: "Telegram",
    url: "https://t.me/vorant94/",
  },
  {
    glyph: "twitter",
    label: "Twitter / X",
    url: "https://x.com/vorant94",
  },
  {
    glyph: "medium",
    label: "Medium",
    url: "https://vorant94.medium.com/",
  },
  {
    glyph: "linked-in",
    label: "LinkedIn",
    url: "https://www.linkedin.com/in/vorant94/",
  },
] as const;
---

<div class="flex flex-col gap-2">
	<Divider>
		<Title as="h3">{t("social-links.title")}</Title>
	</Divider>
	<menu class="mx-auto grid grid-cols-3 gap-5">
		{socialLinksMeta.map((socialLink) => (
			<li>
				<ButtonLink
					variant="outlined"
					href={socialLink.url}
					target="_blank"
					class="flex h-24 w-24 flex-col items-center justify-center gap-2 p-2 text-slate-800 dark:text-slate-100"
				>
					<span class="text-xl">
						<Icon glyph={socialLink.glyph} />
					</span>
					<span class="max-w-full truncate">{socialLink.label}</span>
				</ButtonLink>
			</li>
		))}
	</menu>
</div>
