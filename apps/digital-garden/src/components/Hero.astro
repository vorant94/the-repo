---
import heroLogo from "../assets/hero-logo.webp";
import heroLogoDark from "../assets/hero-logo-dark.webp";
import { createTranslate } from "../lib/i18n";
import { StandOut } from "./ui/stand-out";
import { Text } from "./ui/text";
import { ThemedImage } from "./ui/themed-image";

const t = createTranslate(Astro.currentLocale);
---

<StandOut
	transition:name="intro"
	className="dark:border-2! dark:rounded-lg! dark:border-sky-200! my-4 items-center dark:rotate-3 dark:shadow-[0_0_2px_#fff,inset_0_0_2px_#fff,0_0_5px_rgb(6,182,255),0_0_15px_rgb(6,182,255),0_0_30px_rgb(6,182,255)]"
>
	<div class="hidden shrink-0 lg:block">
		<ThemedImage
			src={heroLogo}
			srcDark={heroLogoDark}
			alt="Logo"
			width="80"
		/>
	</div>

	<div class="flex flex-col gap-2">
		<Text as="strong">{t('hero.title')}</Text>
		<Text
			as="span"
			className="font-light text-sm"
		>
      {t('hero.text.first-paragraph')}
		</Text>
		<Text
			as="span"
			className="font-light text-sm"
		>
      {t("hero.text.second-paragraph.before-strikethrough")}
			<span class="line-through">{t("hero.text.second-paragraph.strikethrough")}</span>
      {t("hero.text.second-paragraph.after-strikethrough")}
		</Text>
	</div>
</StandOut>
