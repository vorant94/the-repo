---
import { Divider } from "./ui/divider";
import { Title } from "./ui/title";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="flex flex-col gap-2">
	<Divider>
		<Title as="h3">{title}</Title>
	</Divider>

	<menu class="flex flex-col gap-2">
		<slot/>
	</menu>
</div>
