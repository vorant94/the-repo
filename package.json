{
  "name": "the-repo",
  "type": "module",
  "private": true,
  "license": "MIT",
  "scripts": {
    "ts:check": "npm run ts:check --workspaces --if-present",
    "lint:check": "biome check .",
    "lint:write": "biome check --write .",
    "lint:write:unsafe": "biome check --write --unsafe .",
    "lint:ci": "biome ci .",
    "prepare": "lefthook install"
  },
  "workspaces": [
    "apps/*",
    "tools/*",
    "libs/*"
  ],
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "lefthook": "^1.11.3",
    "turbo": "^2.4.4"
  },
  "engines": {
    "node": ">=23"
  },
  "os": [
    "darwin",
    "linux"
  ],
  "packageManager": "^npm@11.2.0"
}
