{
  "name": "the-repo",
  "devDependencies": {
    "@biomejs/biome": "^2.3.6",
    "knip": "^5.70.2",
    "lefthook": "^1.11.3",
    "syncpack": "^13.0.4",
    "turbo": "^2.6.1"
  },
  "engines": {
    "node": ">=23"
  },
  "license": "MIT",
  "os": [
    "darwin",
    "linux"
  ],
  "packageManager": "^npm@11.2.0",
  "private": true,
  "scripts": {
    "deps-mismatch:check": "syncpack list-mismatches",
    "deps-mismatch:fix": "syncpack fix-mismatches",
    "lint:check": "biome check .",
    "lint:ci": "biome ci .",
    "lint:write": "biome check --write .",
    "lint:write:unsafe": "biome check --write --unsafe .",
    "prepare": "lefthook install",
    "unused-code:check": "knip"
  },
  "type": "module",
  "workspaces": [
    "apps/*",
    "tools/*",
    "libs/*"
  ]
}
