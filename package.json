{
  "name": "the-repo",
  "type": "module",
  "private": true,
  "license": "MIT",
  "scripts": {
    "ts:check": "npm run ts:check --workspaces --if-present",
    "lint:check": "biome check .",
    "lint:write": "biome check --write .",
    "lint:write:unsafe": "biome check --write --unsafe .",
    "prepare": "lefthook install"
  },
  "workspaces": [
    "apps/*"
  ],
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "lefthook": "^1.11.3"
  },
  "engines": {
    "node": ">=23"
  },
  "os": [
    "darwin",
    "linux"
  ]
}
