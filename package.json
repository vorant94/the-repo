    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.13.10",
    "@types/react": "^18.3.19",
    "@types/react-dom": "^18.3.5",
    "@vitest/coverage-v8": "^3.0.8",
    "autoprefixer": "^10.4.21",
    "cssnano": "^7.0.6",
    "dotenv": "^16.4.7",
